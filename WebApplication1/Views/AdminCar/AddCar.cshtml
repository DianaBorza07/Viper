@model CarRental.Models.Car
    ViewData["Title"] = "Add car";
}
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/css//bootstrap-morph.css" />
</head>

<div>
    <h1>
        Add new car
    </h1>
</div>
<body>
    <form method="post">
        <div class="form-group"
            <label class=" form-label">Brand</label>
            <input asp-for="brand" class="form-control" />
        </div>

        <div class="form-group"
            <label class=" form-label">Model</label>
            <input asp-for="model" class="form-control" />
         </div>

        <div class="form-group"
            <label class=" form-label">Fabrication Date </label>
            <input asp-for="fabricationDate" id ="datepicker" type="text" class="form-control" value="@DateTime.Now.ToString("dd-MM-yyyyThh:mm")" />
        </div>



        <div>
            <a class="btn btn-primary" asp-area="" asp-controller="" asp-action="" asp-route-carId="">Add car</a>
        </div>
    </form>
</body>
